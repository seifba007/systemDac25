{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true, // Changed to true for better CommonJS compatibility
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"] // Updated for clarity: resolves to src/*
    },
    "noImplicitAny": true, // Explicitly set (already included by strict)
    "strictNullChecks": true, // Explicitly set (already included by strict)
    "noUnusedLocals": true, // Explicitly set (already included by strict)
    "noUnusedParameters": true // Explicitly set (already included by strict)
  },
  "include": ["src/**/*"], // Simplified: includes all files in src
  "exclude": ["node_modules", "dist"], // Explicitly exclude node_modules and dist
  "references": [{ "path": "./tsconfig.node.json" }]
}